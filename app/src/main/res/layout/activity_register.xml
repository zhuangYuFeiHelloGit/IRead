<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <include layout="@layout/back_iv"/>

    <EditText
        android:id="@+id/register_user_et"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="请输入账号"
        android:background="@drawable/shape_et_bg"
        android:layout_marginTop="25dp"
        android:paddingLeft="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="账号长度不能低于6位、不能超过11位"/>
    <EditText
        android:id="@+id/register_password_et"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="请输入密码"
        android:background="@drawable/shape_et_bg"
        android:layout_marginTop="20dp"
        android:paddingLeft="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textPassword"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="密码长度不能低于6位"/>

    <EditText
        android:id="@+id/register_ensure_password_et"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="请确认密码"
        android:background="@drawable/shape_et_bg"
        android:layout_marginTop="20dp"
        android:paddingLeft="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textPassword"/>

    <TextView
        android:id="@+id/register_ensure_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="两次密码输入要一致"/>
    
    <TextView
        android:id="@+id/register_tv"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:text="注册"
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/selector_btn"/>

</LinearLayout>